#!/bin/sh

source script-x
set -u
progname="$(basename $0)"
source eexec
eexec_program=$(EExec_parse "$@")
for op in $eexec_program
do
  $op
  shift
done
unset eexec_program

if [ "${1-}" = "-s" ]
then
    post_proc=basename
    shift
elif [ "${1-}" = '-r' ] # Mutually exclusive
then
    post_proc=realpath
else
    post_proc=echo
fi
        
    
: ${p4config:=$P4CONFIG}
f=$(EExec -q find-up "$@" "${p4config}") && {
    # Prevent a '.' when using EExec -n
    # f is "", but there is no error and dirname "" --> '.'
    [ -n "$f" ] && {
        dn=$(dirname "${f}")
        $post_proc "$dn"
        exit 0
    }
    exit 1
}

