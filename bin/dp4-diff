#!/bin/sh
source script-x
set -u
progname="$(basename $0)"
source eexec
if vsetp "${eexec_program-}"    # Did the caller provide a program?
then
    EEXEC_SHIFT=:
else
    eexec_program=$(EExec_parse "$@")
    EEXEC_SHIFT=shift
fi

for op in $eexec_program
do
  $op
  ${EEXEC_SHIFT}
done
EExec_verbose_msg $(echo_id eexec_program)
unset eexec_program
# Or export eexec_program to propagate eexec info to a called program.
# export eexec_program

: ${loop_and_ask_p=}

diff_all_opened()
{
    local args="$@"
    set -- $(p4 opened | dp4-sans-junk | while read; do echo "${REPLY}"; done)
    while (($# > 0))
    do
      EExec p4 diff "$1"
      shift
      if (($# > 0))
      then
          read -e -p "Press <Enter> to continue..."
      fi
    done
}

P4DIFF=diff

while (($# > 0))
do
  case "$1" in
    -x|--xxdiff) P4DIFF=xxdiff;;
    --diffor|differ) shift; P4DIFF="${2}";;
    --diff) export P4DIFF=diff;;
    --meld) export P4DIFF=meld;;
    -n|--many|--gt-one) loop_and_ask_p=t;;
    --opened|--all) diff_all_opened; exit;;
    --) shift; break;;
    *) break;;
  esac
  shift
done

true_p "${loop_and_ask_p}" || {
    EExec p4 diff "$@"
    exit
}

echo 1>&2 "MULTIPLE FILES NOT HANDLED YET."
exit 1

