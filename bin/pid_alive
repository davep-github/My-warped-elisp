#!/bin/sh
#set -x
# Linux only hack... actually /proc/<pid> type system hack.
pid_alive()
{
    local pid=$1
    [ -n "$pid" ] || {
	echo 1>&2 "pid must be provided."
	return 1
    }
    shift
    local prog=$1
    [ -n "$prog" ] || {
	echo 1>&2 "prog must be provided."
	return 1
    }
    shift
    local pid_dir="/proc/$pid"
    local pid_cmdline="$pid_dir/cmdline"
    [ -d "$pid_dir" ] && {
        set -- $(cat "$pid_cmdline")
	local pid_prog=$(basename $1)
        [ "$prog" = "$pid_prog" ]
	return
    }
}

pid_alive "$@"
