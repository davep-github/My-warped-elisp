#!/bin/sh
# I'm sure this exists somehow, somewhere.

source script-x
set -u

[ "$*" = "" ] && {
    echo "Usage: $(basename $0) nth files..."
    exit 1
} 1>&2

: ${base_rev=HEAD}
export base_rev

nth=${1-}
shift

for file in "$@"
do
  rev=$(git-nth-rev "$nth" "$file")
  git diff "$rev" "$file"
done
