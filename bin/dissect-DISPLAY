#!/bin/sh
progname=$(basename $0)
. script-x

dissect_DISPLAY()
{
    [[ -n "$1" ]] && {
        if [[ "$1" == "-" ]]; then
            # For testing.
            DISPLAY=""
        else
            DISPLAY=$1
        fi
        shift
    }
    # hostname:displaynumber.screennumber
    [[ -z "$DISPLAY" ]] && {
        dpe_echo "The DISPLAY environment variable is not set."
        return 1
    }
    
    set -- ${DISPLAY/:/ }
    [[ -z "$2" ]] && {
        set -- localhost $1
    }
    set -- $1 ${2/./ }
    [[ -z "$3" ]] && {
        set $1 $2 0
    }
    echo "$@"
    return 0
}
dissect_DISPLAY "$@"
exit $?
