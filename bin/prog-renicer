#!/bin/sh

progname=$(basename "$0")
source script-x

: ${EXEC:=""}
: ${SLEEP_TIME:=10}
: ${NICENESS:=-20}

std_options=
option_str="n:p"
source dp-getopt+.sh
for i in "$@"
do
  # do. e.g.  $OPTION_ARG=$2; shift;; to process options with arguments.
  case $1 in
      # Don't actually execute stuff, ie pretend.
      -p) EXEC=echo; vsetp "$EExec_loaded_p" && EExecDashN;;
      -n) NICENESS="$2"; shift;;
      --) shift ; break ;;
      *) 
      echo 1>&2 "Unsupported option>$1<";
      usage_err 1;;
    esac
    shift
done

pretending_p()
{
    vsetp "$EXEC"
}
renicer()
{
  local nicee="$1"; shift
  local niceness="$1"; shift
  pids=$(findprog "$nicee")
  if vsetp "$pids" 
  then
    $EXEC sudo renice -n $niceness -p $pids
  else
    echo 1>&2 "No pids found for $nicee"
    pretending_p || exit 2
  fi
}

usage()
{
    echo "Usage: $progname [-n] [-p niceness] program-name...
-p : Pretend; Just show what would be done.
-n niceness : RENICE(1) -n arg"
}

usage_err()
{
    usage 1>&2
    exit ${1:-1}
}

if vunsetp "$@"
then
    echo 1>&2 "I need a program name to renice."
    usage_err 1
fi

for prog in "$@"
do
  renicer "$prog" "$NICENESS"
done

