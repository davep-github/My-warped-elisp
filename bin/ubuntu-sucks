#!/usr/bin/env bash

# set -x
# yes, $*. -c wants one arg, despite the man page's assertion.
# @todo XXX sucks for complex args. Must be fixed.

rp=$(realpath "/bin/sh")

case "${rp}" in
    *bash*) exec "$@" &;;
    *) exec bash --login -c "$*" &;;
esac

