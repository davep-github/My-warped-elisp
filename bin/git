#!/usr/bin/env bash

git () {
    [ "${1-}" = '-x' ] && {
        set -x
        shift
    }
    local disabled=$(command git config --bool $1.disabled 2>/dev/null)
    if ${disabled:-false} ; then
        echo "The $1 command is intentionally disabled" >&2
        return 1
    fi
    command git "$@"
}

do_git "$@"


