gnu_global_complete()
{
        local cur
        cur=${COMP_WORDS[COMP_CWORD]}
        COMPREPLY=($(global -c $cur))
}
DP_BASH_ONLY complete -F gnu_global_complete global

dp_binaries_complete()
{
