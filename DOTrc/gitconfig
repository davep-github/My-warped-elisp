[include]
        path = ~/.rc/gitconfig.diff-n-merge-tools

[include]
        path = ~/.rc/gitconfig.aliases

[include]
        path = ~/.rc/gitconfig.nice-defaults

[color]
	ui = auto

[push]
	disabled = false

[commit]
        checkbranch = true
        disabled = false
        dpmessage = TEST TEST TEST TEST.

