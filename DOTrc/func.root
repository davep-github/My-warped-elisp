dp_set_x_fini()
{
    local set2=${1:-${DPBRC_set_x_post_prompt_command_val}}
    if vsetp $DPBRC_Clear_set_x_p; then
        set +x
    elif [ -n "$set2" ]
    then
        # Set set [-x|+x] as per default
        set "$set2"
    fi

    true
}

prompt_command_errno()
{
    if vsetp ${dp_verbose_rc_in_prompt_p-}; then
        if [ "$1" == 0 ]; then
            echo 0
        else
            echo "$1:$(errno -n ""$1"")"
        fi
    else
        echo "$1"
    fi
}

