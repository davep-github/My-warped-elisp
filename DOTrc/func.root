pix ()
{
    # pix + Installed check
    local opts
    local less_opt
    if [[ "$1" != "-l" ]]; then
	less_opt="| less"
    else
	less_opt=""
	shift
    fi
    case "$1" in
      -*) opts=;;
      *) opts="${DP_DEF_PIX_ARGS}";;
    esac

    eval eix $DP_PIX_COLORIZE $opts "$@" $less_opt
}

