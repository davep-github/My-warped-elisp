__gitdir () 
{ 
    if [ -z "${1-}" ]; then
        if [ -n "${__git_dir-}" ]; then
            echo "$__git_dir";
        else
            if [ -d .git ]; then
                echo .git;
            else
                git rev-parse --git-dir 2>/dev/null;
            fi;
        fi;
    else
        if [ -d "$1/.git" ]; then
            echo "$1/.git";
        else
            echo "$1";
        fi;
    fi
}

xxx_newest()
{
    local op="${1}"; shift
    local depth=1
    local nth=
    while (($# > 0))
    do
      case "${1-}" in
          -n|--nth|--depth) shift; depth="${1}";;
          x[0-9]*|[0-9]*) depth="${1}";;
          -[0-9]*) nth="${1}";;
          --) shift; break;;
          *) break;;
      esac
      shift
    done
    local dir
    while ((depth-- > 0))
    do
      dir=$(newest-dir ${nth} "$@") || return $?
      $op "${dir}" || return $?
    done
    return "$?"
}

cdnew()
{
    xxx_newest cd "$@"
    return "$?"
}
DP_EXPORT_FUNC cdnew
alias cd_newest=cdnew

