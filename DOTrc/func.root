dashify()
{
    ret=
    for o in $*; do
        # echo 1>&2 "o>$o<"
        case "$o" in
            "") ;;              # Should not happen, but...
            " ") ;;
            -*) ret="$ret $o";;
            *)  ret="$ret -$o";;
        esac
    done
    echo "$ret"
}
DP_EXPORT_FUNC dashify

