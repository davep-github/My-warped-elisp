dp_kill_job_id_n ()
{
#set -x
    local jidn="$1"
    local jid="%$1"
    shift
    local sig=${1:--15}
    kill "$sig" "$jid" && wait "$jid"
    if jobs | fgrep -q "[$jidn]"
    then
	kill -9 "$jid" && wait "$jid"
    fi
}
DP_EXPORT_FUNC dp_kill_job_id_n 

