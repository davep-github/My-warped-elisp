# Exchange sandboxes

exchange_sandboxes()
{
    [ -z "${1-}" ] && {
        echo "exchange_sandboxes(): Need a box name."
        return 1
    } 1>&2
    
    xdir "$(scsandbox $PWD)" "$1"
    
    # Is there another arg? That's a directory to `gr' to.
    [ -n "${2-}" ] && {
        gr "$2"
    }
}
DP_EXPORT_FUNC exchange_sandboxes
alias xsb=exchange_sandboxes

