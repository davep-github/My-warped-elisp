[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = true

[difftool "p4diff"]
	cmd = p4diff.git $LOCAL $REMOTE

[difftool "ec-diff"]
	cmd = ec-diff -w $LOCAL $REMOTE

[difftool "ec-merge"]
	cmd = ec-merge -w $LOCAL $REMOTE

[difftool "meld"]
	cmd = meld $LOCAL $REMOTE

[difftool "diffuse"]
        cmd = diffuse $LOCAL $REMOTE
