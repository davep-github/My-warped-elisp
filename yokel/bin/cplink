#!/bin/sh
ddir=/usr/yokel/etc
[ "$1" = "-f" ] && {
	force=1
	shift
}
file=$1
dfile=$ddir/$file.$HOST
bufile=$file.orig

[ -f $bufile -a "$1" != "1" ] && {
	echo backup already exists. 1>&2
	exit 1
}
cp $file $bufile || {
	echo backup failed. 1>&2
	exit 1
}
mv $file $dfile || {
	echo cp failed. 1>&2
	exit 1
}

ln -s $dfile $file || {
	echo ln -s failed. 1>&2
	exit 1
}
